{
  "name": "find-a-friend-api",
  "version": "1.0.0",
  "description": "This is a Node.js API that provides an API for adopt a pet service. The application uses TypeScript, Docker, and PostgreSQL.",
  "main": "./app/server.ts",
  "type": "module",
  "scripts": {
    "start:dev": "tsx watch ./app/server.ts",
    "build": "tsup app --out-dir dist/app",
    "start:prod": "node ./dist/app/server.cjs",
    "test:unit": "vitest run --dir app/use-cases",
    "test:unit:watch": "vitest --dir app/use-cases",
    "test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-environment": "npm link vitest-environment-prisma",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:e2e": "vitest run --dir app/http",
    "test:e2e:watch": "vitest --dir app/http",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "20.10.6",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.7.1",
    "supertest": "^7.0.0",
    "tsup": "^8.1.0",
    "tsx": "4.7.0",
    "typescript": "5.3.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.600.0",
    "@faker-js/faker": "^8.4.1",
    "@fastify/cookie": "^9.3.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "^8.3.0",
    "@prisma/client": "^5.12.1",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "16.3.1",
    "fastify": "4.25.2",
    "zod": "3.22.4"
  }
}
